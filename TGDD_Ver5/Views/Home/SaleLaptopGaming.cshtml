@model IEnumerable<TGDD_Ver5.Models.ProDetail>
    @{ 
        Layout = null;
    }
<style>
    .List__Product{
        padding-bottom:5px;
    }
</style>
<link href="~/Content/Home/SaleLaptopGaming.css" rel="stylesheet" />
<div class="container-fluid List__Product" style="background-color:#920101;" id="SaleLaptopGaming">
    <div class="List__Product--banner"><img src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100/https://cdn.tgdd.vn/2023/10/campaign/Frame-1-1200x120-2.png"></div>
    <div class="container-fluid item__laptopgaming filtering" id="laptopgaming_sale">
        <!--Start-->
        @foreach (var item in Model)
        {
            <div class="item__laptopgaming">
                <a href="@Url.Action("Laptop_Detail", "ProductDetail", new {id = item.ID})">
                    <div class="hotdeal__laptopgaming">

                        <div class="laptopgaming__installment">
                            <span class="set__ins" style="color: #333;">Trả góp 0%</span>
                        </div>
                        <div class="hotdeal__laptopgaming--img">
                            <img src="@Url.Content(item.Product.ImagePro)">
                        </div>
                        <p class="item__installment--laptopgaming" style="background-color:@Url.Content(item.Bonu.RGB)"><img class="set__img--hotdeal" src="@Url.Content(item.Bonu.Img_Bonus)"><span class="set__text--hotdeal">@item.Bonu.Bonus_Name</span></p>
                        <div class="hotdeal__laptopgaming--text">

                            <div class="name__laptopgaming" style="color: #333;">@item.Product.NamePro @item.CPU @item.RAM @item.HardDrive</div>
                            <div class="laptopgaming__price-and-discount">
                                <div class="price__laptopgaming">@String.Format("{0:#,0}", item.Price)₫</div>
                                <div class="discount__laptopgaming">
                                    <small style="font-size:12px;">-@item.Discount%</small>
                                </div>
                                <p style="color: #666; font-size: 14px; margin-bottom: 8px;">Quà @item.Bonu.Bonus_Name</p>
                            </div>
                            @if(item.Product.Rating != null)
                            {
                                <p class="vote__laptopgaming">
                                    <b style="color: #fb6e2e">@item.Product.Rating</b>
                                    <i><img style="margin: 0px 10px 4px 5px; width: 13px; height: 13px;" src="https://cdn-icons-png.flaticon.com/128/8906/8906905.png?ga=GA1.1.1214305306.1697263106&track=ais"></i>(@item.Product.Comments.Count())
                                </p>
                            }
                            
                        </div>

                    </div>
                    <div class="border__img"><img src="https://img.tgdd.vn/imgt/f_webp,fit_outside,quality_100/https://cdn.tgdd.vn/2023/04/campaign/Frame-knockout-desktop-226x500.png"></div>
                </a>
            </div>
        }

        <!--END-->
    </div> <a href="@Url.Action("Cate","Laptop", new {cate ="Gaming"})" style="text-decoration:none;color:black;">
               <div class="btn__seemoreLTG" style="font-size: 15px;">
                   Xem thêm Laptop Gaming
               </div>
</a>
    
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        $('#laptopgaming_sale').slick({
            slidesToShow: 5,
            slidesToScroll: 5,
        });
    });
</script>