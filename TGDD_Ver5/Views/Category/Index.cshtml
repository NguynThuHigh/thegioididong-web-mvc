@model IEnumerable<TGDD_Ver5.Models.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Loại laptop | @Html.ActionLink("Thêm loại mới", "Create")</h2>

<p>
    
</p>
<table class="table">
    <tr>
        <th>
            Mã
        </th>
        <th>
            Tên
        </th>
        <th>Tổng số hàng hóa</th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.IDCate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameCate)
        </td>
        <td>
            @item.Products.Count()
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.IDCate }, new { @class = "btn btn-sm btn-info" }) |
            @Html.ActionLink("Details", "Details", new { id = item.IDCate }, new { @class = "btn btn-sm btn-success" })
            @Html.ActionLink("Delete", "Delete", new { id = item.IDCate }, new { @class = "btn btn-sm btn-danger" })
        </td>
    </tr>
}

</table>
